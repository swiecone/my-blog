
<%= render 'shared/page_header', bg_image: "img/findabook-bg.jpg",title: "Searching for Book Information", subtitle: "This page is meant to search for book information using ISBN", by:"Alex Swiec", on:"October 20, 2015" %>


    <!-- Main Content -->
    <div class="container">
        <div class="row text-justify">
            <div class="col-md-6 col-md-offset-3">
              <%= form_tag("/findabook", method: "post") do %>
                 <%= label_tag(:q, "ISBN  ") %>
                 <%= text_field_tag(:q) %>
                 <%= submit_tag("Search", class: 'btn-sm btn-primary') %>
              <% end %>
            </div>
                
       </div>
    </div>

    <hr>
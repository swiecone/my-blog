<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('../img/findabook-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Add a book to the site</h1>
                        <hr class="small">
                        <span class="subheading">This page is used add books manually to the site</span>
                    </div>
                </div>
            </div>
        </div>
    </header> 

    <!-- Main Content -->
    <div class="container">
        <div class="row text-justify">
            <div class="col-md-6 col-md-offset-3">
             <%= form_for @book, url: books_path  do |f| %>
			  <p>
			    <%= f.label :isbn %><br>
			    <%= f.text_field :isbn %>
			  </p>

			  <p>
			    <%= f.label :title %><br>
			    <%= f.text_field :title %>
			  </p>
			 
			  <p>
			    <%= f.label :shortsummary %><br>
			    <%= f.text_area :shortsummary %>
			  </p>

			    <p>
			    <%= f.label :longsummary %><br>
			    <%= f.text_area :longsummary %>
			  </p>

			  <p>
			    <%= f.label :rating %><br>
			   <select name="rating">
  					<option value="1">1</option>
				    <option value="2">2</option>
				    <option value="3">3</option>
				    <option value="4">4</option>
				    <option value="5">5</option>
				    <option value="6">6</option>
				    <option value="7">7</option>
				    <option value="8">8</option>
				    <option value="9">9</option>
				    <option value="10">10</option>
				</select>
			  </p>

			    <%= f.label :status %><br>
			   <select name="status">
  					<option value="In Progress">In Progress</option>
				    <option value="Read">Read</option>
			   </select>
			  </p>

			 <p>

				<br><br>
				If you finished the book, enter the date you finished it:<br>
				<input type="date" name="read"><br><br>
			 </p>

			  <p>
			    <%= f.label :thumburl %><br>
			    <%= f.text_field :thumburl %>
			  </p>


			  <p>
			    <%= f.submit %>
			  </p>
			<% end %>
            </div>
                
       </div>
    </div>

    <hr>
<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('img/books-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Books</h1>
                        <hr class="small">
                        <span class="subheading">A list of books I've read</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                                   <%= render 'layouts/messages' %>
                </div>
            </div>

        </div>
    </header>

<div class="container">
     <% @contacts.each do |contact| %>
             <p>
               <u><strong> MESSAGE <%= contact.id %> </strong></u><br><br>

                <%= contact.name %> contacted on the <strong>  <%= contact.created_at.strftime("%m/%d/%Y")%> </strong> to say:<br> <i>&nbsp;&nbsp;<%= contact.message %> </i>.  <br><br>If you want to reply to him, click <%= link_to "#{contact.email}", "mailto:#{contact.email}" %>.
            </p> 
    <hr>

    <% end %>

 </div>
